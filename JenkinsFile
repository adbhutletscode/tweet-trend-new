pipeline {
    agent {
        node {
            label 'maven'
        }
    }

    environment {
        PATH = "/opt/apache-maven-3.9.6/bin:$PATH"
    }

    tools {
        maven 'maven' // Optional: only if you're managing Maven via Jenkins tools
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }

        stage('SonarQube analysis') {
            environment {
                scannerHome = tool 'galexcy-sonar-scaner'
            }
            steps {
                withSonarQubeEnv('galexcy-sonarqube-cred') {
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }
    }
}
